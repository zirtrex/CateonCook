<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_inicio"
    android:layout_margin="1dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="2dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    card_view:cardBackgroundColor="@color/color_card_inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_height="@dimen/height_imagen"
            android:id="@+id/ivEImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_width="@dimen/width_imagen" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvETitle"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textColor="@android:color/background_light"
                android:textSize="24dp"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>